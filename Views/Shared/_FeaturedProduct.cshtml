@using System.Globalization;
@model IEnumerable<DoAnChuyenNganhConnection.Product>
<div class="row featured__filter">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">


            <div class="featured__item">
                <div class="featured__item__pic set-bg" data-setbg="/Content/images/@item.Cover">
                    <ul class="featured__item__pic__hover">
                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                        <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                        <li><a href="/ShoppingCart/AddToCart/@item.Id"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
                <div class="featured__item__text">
                    <h6><a href="@Url.Action("Details","Product", new { id = @item.Id })">@item.Name</a></h6>
                    <h5>@string.Format(new CultureInfo("vi-VN"), "{0:#,##0}", item.Price)<span>vnđ</span></h5>
                </div>
            </div>
        </div>
    }
</div>



