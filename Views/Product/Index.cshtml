<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>LAPTOP PRODUCT</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".oranges">DELL</li>
                        <li data-filter=".fresh-meat">ASUS</li>
                        <li data-filter=".vegetables">ACER</li>
                        <li data-filter=".fastfood">MACBOOK</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">


                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="/Content/images/@item.Cover">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="/ShoppingCart/AddToCart/@item.Id"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="@Url.Action("Details",new { id=@item.Id})">@item.Name</a></h6>
                            <h5>@string.Format(new CultureInfo("vi-VN"), "{0:#,##0}", item.Price)<span>VNĐ</span></h5>
                        </div>
                    </div>
                </div>


            }
