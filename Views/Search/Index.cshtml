<div class="row featured__filter">
    
        @{
            if (string.IsNullOrEmpty(key))
            {
                <h3>vui lòng nhap</h3>
            }
            else
            {

                if (key == "" || key.Length < 3)
                {
                    <h3>vui lòng nhap</h3>
                }
                else
                {

                    foreach (var item in Model)
                    {

                        
                    <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">


                        <div class="featured__item">
                            <div class="featured__item__pic set-bg" data-setbg="/Content/images/@item.Cover">
                                <ul class="featured__item__pic__hover">
                                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                    <li><a href="/ShoppingCart/AddToCart/@item.Id"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <h6><a href="@Url.Action("Details", "Product", new { id = @item.Id })">@item.Name</a></h6>
                                <h5>@item.Price<span>vnđ</span></h5>
                            </div>
                        </div>
                    </div>


                }

            }
        }
