        <label for="country">Hình1</label>
        <input type="text" id="lname" name="Cover1" placeholder="" required value="@Model.Cover1">

        <label for="country">Hình2</label>
        <input type="text" id="lname" name="Cover2" placeholder="" required value="@Model.Cover2">

        <label for="country">Hình3</label>
        <input type="text" id="lname" name="Cover3" placeholder="" required value="@Model.Cover3">

        <label for="country">Hình4</label>
        <input type="text" id="lname" name="Cover4" placeholder="" required value="@Model.Cover4">

        <label for="country">Loại sản phẩm</label>
        <input type="text" id="lname" name="IdProductType" placeholder="" required value="@Model.IdProductType">

        <label for="country">Nhà sản xuất</label>
        <input type="text" id="lname" name="IdProducer" placeholder="" required value="@Model.IdProducer">
        <label for="country">Ghi chú</label>
