        <input type="text" id="lname" name="Name" placeholder="" required value="@Model.Name">

        <label for="country">Miêu tả sản phẩm</label>
        <input type="text" id="lname" name="Description" placeholder="" required value="@Model.Description">

        <label for="country">Năm sản xuất</label>
        <input type="text" id="lname" name="PublicYear" placeholder="" required value="@Model.PublicYear">

        <label for="country">Gía</label>
        <input type="text" id="lname" name="Price" placeholder="" required value="@Model.Price">

        <label for="country">Hình</label>
